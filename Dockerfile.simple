FROM python:3.9-slim

# Create a simple web server
RUN echo 'import os' > app.py && \
    echo 'import random' >> app.py && \
    echo 'from http.server import HTTPServer, BaseHTTPRequestHandler' >> app.py && \
    echo '' >> app.py && \
